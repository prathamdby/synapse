# Development override for docker-compose
# This file is automatically loaded by docker-compose when present
# Use: docker-compose up -d to start with development settings

services:
  synapse-bot:
    # Override for development
    build:
      context: .
      dockerfile: Dockerfile
    # Mount source code for development (optional)
    volumes:
      - ./data:/app/data
      # Uncomment the following line for live code reload in development
      # - .:/app
    environment:
      # Development specific settings
      - LOG_LEVEL=DEBUG
    # Keep container running even if it crashes for debugging
    restart: "no"